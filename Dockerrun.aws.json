{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "express-app",
            "host": {
                "sourcePath": "/var/app/current/express-app"
            }
        },
        {
            "name": "nginx-conf",
            "host": {
                "sourcePath": "/var/app/current/proxy/conf.d"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "express",
            "image": "jerrylerman/feedback-express",
            "hostname": "express",
            "essential": false,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ],
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "jerrylerman/feedback-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": ["express"],
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "nginx-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                },
                {
                    "sourceVolume": "express-app",
                    "containerPath": "/usr/src/app",
                    "readOnly": true
                }
            ]
        }
    ]
}